<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:id="@+id/lin_name_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="sans-serif-medium"
                android:text="Name"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginTop="5dp"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/edit_full_name"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                app:layout_constraintTop_toTopOf="parent"
                android:hint="email"
                android:inputType="textPersonName"
                android:imeOptions="flagNoFullscreen"
                android:textSize="15sp"
                android:background="@drawable/edittext_background"
                android:layout_marginTop="15dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:maxLength="100"
                android:maxLines="1"/>

            <EditText
                android:id="@+id/edit_password"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                app:layout_constraintTop_toTopOf="parent"
                android:hint="Password"
                android:inputType="textPassword"
                android:imeOptions="flagNoFullscreen"
                android:textSize="15sp"
                android:background="@drawable/edittext_background"
                android:layout_marginTop="15dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:maxLength="100"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/btn_continue_and_sync_contacts"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginTop="15dp"
                android:background="@drawable/button_main_background"
                android:enabled="false"
                android:text="Contacts"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/btn_continue_without_syncing_contacts"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginTop="10dp"
                android:enabled="false"
                android:text="continue without syncing contacts"
                android:textColor="@color/black"
                android:textSize="15dp"/>

        </LinearLayout>
        <RelativeLayout
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_learn_more_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_gravity="center_horizontal"
                    android:text="Learn more syncing contacts"
                    android:textColor="@color/colorPrimaryDark"
                    android:gravity="center"
                    android:layout_marginBottom="1dp"
                    android:textSize="13dp"/>

                <TextView
                    android:id="@+id/tv_learn_more_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_gravity="center_horizontal"
                    android:text="Learn more"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="13dp"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>